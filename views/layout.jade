!!!5
html
  head
    if !title
      -title = 'Jessica Frankl'
    title #{title}
    link(rel='stylesheet', href='/style.css')
    link(rel='stylesheet', href='/font-awesome.css')
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js')
    block links
    
  body
    .container
      .head.clearfix
        div
          h1 
            a(href='/') Jessica Frankl
        div.right
          -var menu = { 'Portfolio': '/portfolio', 'Bio': '/bio', 'Contact': '/contact' };
          ul.navLinks
            each val, key in menu
              - var className = title.indexOf(key)==-1? '': 'active'
              - liClass = key=='Portfolio'? 'portfolio' : ''
              li(class=liClass)
                a(class=className, href=val)= key
                if key=='Portfolio'
                  ul.subnavLinks
                    each collection in collections
                      li 
                        - var href = '/portfolio/'+collection.name.toLowerCase()
                        a(href=href)= collection.name
      .content
        block content
    .footer
      h6 &copy; Jessica Frankl