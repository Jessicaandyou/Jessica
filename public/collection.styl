#picContainer
  position relative
  &:hover
    #prev, #next
      display block

#prev, #next
  position absolute
  top 40%
  background rgba(255, 255, 255, .3)
  width 100px
  height 100px
  border 1px solid #000
  display none
  &:hover
    background #fff
    border 1px solid #000
  &:active
    background rgba(255, 255, 255, .3)

#prev
  left 0
  border-left 0
  border-top-right-radius 5px
  border-bottom-right-radius 5px

#next
  right 0
  border-right 0
  border-top-left-radius 5px
  border-bottom-left-radius 5px

.glyph
  position absolute
  left 50%
  margin-left -15px
  top 50%
  margin-top -15px