activeColor = #900000

body
  margin 0
  font-family Helvetica
  user-select none
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -moz-user-select: none;    /* Firefox */
  -ms-user-select: none;     /* IE 10  */

  /* Currently not supported in Opera but will be soon */
  -o-user-select: none;
  user-select: none;  

h1, h2, h3, h4, h5, h6
  a
    color inherit
    text-decoration inherit
h1 
  margin 0
  padding-top 15px

h2
  font-size 18px

.collectionHead
  text-align center

.container
  max-width 800px
  margin 0 auto

.glyph
  width 30px
  height 30px

.head
  div
    float left
  .right
    float right
  ul
    list-style-type none
    padding-top 10px
    li
      a
        text-decoration none
        color inherit
      &:hover, &.active
        color activeColor
      li
        color #000
    &.navLinks > li
      display inline
      padding 10px
      position relative
    &.subnavLinks
      // display none
      position absolute
      top 100%
      left 0
      margin 0
      padding 0 10px
      z-index 2
      background #fff
      li
        padding-bottom 10px

.portfolio li
  display none

.portfolio:hover li
  display block



.content
  padding-top 10px
  img.active
    width 800px
    max-height 800px

.hidden
  display none

.footer
  background #000
  color #fff
  text-align center
  position absolute
  bottom 0
  width 100%
  font-size 16px
  line-height 0

.loginForm, .newPictureForm
  margin 0 auto
  padding 10px
  button
    width 100%
    background #333
    border-color #111
    &:hover
      background #222
      border-color #000
    &:focus
      background #333
      border-color #333
      outline-width 0
  input, textarea
    &:focus
      border-color #666

.loginForm
  width 200px

.newPictureForm
  width 400px

.clearfix:before,.clearfix:after
  display table
  content " "
.clearfix:after
  clear both

p
  font-size 20px
  text-indent 2em
  line-height 1.5
  font-family georgia


