@import url("http://fonts.googleapis.com/css?family=Trykker")

body
  margin 0
  font-family Trykker
  user-select none
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -moz-user-select: none;    /* Firefox */
  -ms-user-select: none;     /* IE 10  */

  /* Currently not supported in Opera but will be soon */
  -o-user-select: none;
  user-select: none;  

h1 
  margin 0

.head
  position fixed
  top 0
  height 100px
  font-size 30px

.left
  position fixed
  left 0
  top 100px
  width 200px

.right
  padding 100px 175px 0
  height 100%
  img
    width: 700px

ul
  list-style-type none
  padding-left 10px
  &.main, &.secondary
    li:hover
        color #ff0000
        cursor pointer
    font-size 18px
  &.main
    margin-top 0

.sub
  font-size 16px
  margin 5px

.hidden
  display none

.footer
  background #000
  color #fff
  text-align center
  position absolute
  bottom 0
  width 100%
  font-size 16px
